[[source]]
url = "https://pypi.python.org/simple"
verify_ssl = true
name = "pypi"

[packages]

[dev-packages]
mypy = "*"
"flake8" = "*"
pylint = "*"
twine = "*"
wheel = "*"
"flake8-builtins" = "*"
"flake8-docstrings" = "*"
"flake8-bugbear" = "*"
isort = "*"
black = "*"

[requires]
python_version = "3.7"

[scripts]
# We pass `--strict` here as mypy does not support specifying it in the
# `mypy.ini` configuration file.
mypy = "mypy --strict setup.py test/ xdg.py"
flake8 = "flake8 setup.py test/ xdg.py"
pylint = "pylint setup.py test/test_xdg.py xdg.py"
isort = "isort -c -rc setup.py test/ xdg.py"
black = "black --check setup.py test/ xdg.py"
package = "python setup.py sdist bdist_wheel"
upload = "twine upload -s dist/*.tar.gz dist/*.whl"
